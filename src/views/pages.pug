  if page != null
    br
    -n = 0
    .pages
      while n < Pnum
        -id = info + 'page=' + n
        if n == page
          p= n+1
        else

          a(href=(id))
            button(type='submit')= n+1
        if n == 0 && page > 3
          -n = page-2
          p &middot &middot &middot
        else if n == page+2 && n < Pnum-2
          -n = Pnum-1
          p &middot &middot &middot
        else

          - n++

