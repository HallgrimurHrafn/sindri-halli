extends layout

block content
  h1 New Thread

  form(method='post' action='/newthread')
    div
      input(
        type='text'
        name='name'
        placeholder='Username'
        pattern='.{2,64}'
        required title='must be 2-64 characters'
      )
    div
      input(
        type='text'
        name='title'
        placeholder='Title'
        pattern='.{3,50}'
        required title='must be 2-100 characters'
      )
    div
      textarea(
        lang='is'
        type='text'
        name='paragraph'
        rows='10'
        cols='30'
        pattern='.{3,10000}'
        required title='must be 3-10000 characters'
      )
    div
      p.select Category:
      select.select(name='sub')
        -a=''
        -b=''
        -c='selected'
        -d=''
        option(value='Schemes' a) Schemes
        option(value='Party' b) Party
        option(value='Tech' c) Tech
        option(value='Videogames' d) Videogames
    div
      button(type='submit') Express yourself
