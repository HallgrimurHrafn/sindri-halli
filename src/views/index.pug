extends layout

block content
  .menu
    .nav
      a(href='/cat=Schemes&page=0')
        if title == 'Schemes'
          button.menuBtn.currentSub(type='submit') Schemes
        else

          button.menuBtn(type='submit') Schemes
      a(href='/cat=Party&page=0')
        if title == 'Party'
          button.menuBtn.currentSub(type='submit') Party
        else

          button.menuBtn(type='submit') Party
      a(href='/cat=Tech&page=0')
        if title == 'Tech'
          button.menuBtn.currentSub(type='submit') Tech
        else

          button.menuBtn(type='submit') Tech
      a(href='/cat=Videogames&page=0')
        if title == 'Videogames'
          button.menuBtn.currentSub(type='submit') Video games
        else

          button.menuBtn(type='submit') Video games
    .newThreadDiv
      -blah = '/newThread&'+title
      a(href=blah)
        button.menuBtn.newThread(type='submit') New Thread
    .fill

  .table
    br
    table
      thead
        tr
          th User
          th Title
          th Comments
          th Views
          th Last modified
      tbody
        each thread in threads
          tr
            td= thread.name
            -id = '/threadid=' + JSON.stringify(thread.id) + '&page=0'
            td
              a(href=id)= thread.title
            td= thread.comnum
            td= thread.views
            -date = JSON.stringify(thread.mdate)
            //- -date = date.substr(0,20) + date.substr(24,27)
            td= date

  br

  .search
    form(method = 'post' action = '/search=')
      select.select(name = 'type')
        option(value = 'name' selected) Name
        option(value = 'title') Title
        option(value = 'paragraph') paragraph
        option(value = 'all') all
      input(
        type = 'text'
        name = 'search'
        pattern = '.{2,64}'
        required title = 'must be 2-64 characters'
      )
      input(
        type = 'submit'
        style = 'visibility: hidden;'
        )



  -id1 = '/'
  if title == 'Schemes'
    -id1 = '/cat=Schemes&'
  if title == 'Party'
    -id1 = '/cat=Party&'
  if title == 'Tech'
    -id1 = '/cat=Tech&'
  if title == 'Videogames'
    -id1 = '/cat=Videogames&'
