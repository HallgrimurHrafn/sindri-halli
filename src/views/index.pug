extends layout

block content
  h1= title
  br

  nav
    a(href='/schemes') Schemes
    a(href='/party') Party
    a(href='/tech') Tech
    a(href='/videogames') Videgames
    a(href='/newThread') New Thread
  br

  hr
  table
    thead
      tr
        th User
        th Title
        th Comments
        th Date
    tbody
      each thread in threads
        -id = '/threadid=' + thread.id + '&page=0'
        tr
          td= thread.name
          td
            a(href=id)= thread.title
          td numComments
          td= thread.date
