extends layout

block content
  h1= title
  br

  div.menu
    form(method='get' action='/cat=Schemes')
      button(type='submit') Schemes
    form(method='get' action='/cat=Party')
      button(type='submit') Party
    form(method='get' action='/cat=Tech')
      button(type='submit') Tech
    form(method='get' action='/cat=Videogames')
      button(type='submit') Videogames
    form(method='get' action='/newThread')
      button.newThread(type='submit') New Thread

  br

  hr
  table.center
    thead
      tr
        th User
        th Title
        th Comments
        th Date
    tbody
      each thread in threads
        -id = '/threadid=' + thread.id + '&page=0'
        tr
          td= thread.name
          td
            a(href=id)= thread.title
          td numComments
          td= thread.date
