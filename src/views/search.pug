extends pages

block content
  h1 Search results for: !{searched}.
  hr
  .table
    table.search
      tboddy
        - i = 0
        each result in results
          -id = '/threadid=' + JSON.stringify(result.threadid) + '&page=0'
          -date = '' + result.date
          -date = date.slice(0,-18)
          if i == 0
            - i++
            tr.colorRow
              td.search
                form(method='get' action=id)
                  button.search.name(type='submit') !{result.name}
                  button.search.date(type='submit') !{date}
              td.search
                form(method='get' action=id)
                  button.search.title(type='submit') !{result.title}
                  button.search.para(type='submit') !{result.paragraph}
          else
            - i--
            tr
              td.search.einn
                form(method='get' action=id)
                  button.name(type='submit') !{result.name} !{'<br />'} !{date}
              td.search.tveir
                form(method='get' action=id)
                  button.title(type='submit') !{result.title} !{'<br />'} !{result.paragraph}
