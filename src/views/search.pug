extends pages

block content
  h1 Search results for: !{searched}.
  hr
  .table
    table
      tboddy
        - i = 0
        each result in results
          -id = '/threadid=' + JSON.stringify(result.threadid) + '&page=0'
          if i == 0
            - i++
            tr.colorRow
              td.search
                form(method='get' action=id)
                  button.name(type='submit')= result.name
              td.search
                form(method='get' action=id)
                  button.title(type='submit') !{result.title} !{'<br />'} !{result.paragraph}
              -date = '' + result.date
              -date = date.slice(0,-18)
              td.search
                form(method='get' action=id)
                  button.mdate(type='submit')= date
          else

            - i--
            tr
              td.search
                form(method='get' action=id)
                  button.name(type='submit')= result.name
              td.search
                form(method='get' action=id)
                  button.title(type='submit') !{result.title} !{'<br />'} !{result.paragraph}
              -date = '' + result.mdate
              -date = date.slice(0,-18)
              td.search
                form(method='get' action=id)
                  button.mdate(type='submit')= date
